{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^libs/common/src$": "<rootDir>/../../../libs/common/src",
    "^libs/common/src/(.*)$": "<rootDir>/../../../libs/common/src/$1"
  }
}
